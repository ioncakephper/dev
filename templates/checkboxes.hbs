<label for="{{{name}}}" id="{{{name}}}-label">{{{label}}}:{{#if required}}<span class="required-field">*</span>{{/if}}</label>
{{#each labelValues as |labelValue|}}
 <div class="form-check">
    <label class="form-check-label" for="{{{../name}}}-{{{labelValue.value}}}" id="{{{../name}}}-{{{labelValue.value}}}-label" name="{{{../name}}}-{{{labelValue.value}}}-label">
      <input class="form-check-input" type="checkbox" id="{{{../name}}}-{{{labelValue.value}}}" name="{{{../name}}}-{{{labelValue.value}}}"{{#if labelValue.checked}} checked{{/if}} /> {{{labelValue.label}}}
    </label>
  </div>
{{/each}}